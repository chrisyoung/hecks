#!/usr/bin/env bash

cd hecks-application/lib
while read -r version; do VERSION=$version; done < Version
cd ../..

cd hecks-domain
gem uninstall hecks-domain --force -x

cd ../hecks-application
gem uninstall hecks-application --force -x

cd ../hecks-adapters-sql-database
gem uninstall hecks-adapters-sql-database --force -x

cd ../hecks-adapters-dynamodb
gem uninstall hecks-adapters-dynamodb --force -x

cd ../hecks-adapters-resource-server
gem uninstall hecks-adapters-resource-server --force -x

cd ../hecks-packager
gem uninstall hecks-packager --force -x

cd ../hecks-serverless
gem uninstall hecks-serverless --force -x

cd ../hecks-events
gem uninstall hecks-events --force -x

cd ../hecks-logger
gem uninstall hecks-logger --force -x

cd ../hecks-memory-database
gem uninstall hecks-memory-database --force -x

cd ../hecks-validator
gem uninstall hecks-validator --force -x

cd ../hecks-domain-builder
gem uninstall hecks-domain-builder --force -x

cd ../hecks
gem uninstall hecks --force -x
