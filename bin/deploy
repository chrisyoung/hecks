#!/usr/bin/env bash

cd hecks-application/lib
while read -r version; do VERSION=$version; done < Version
cd ..
gem push ./hecks-application-$VERSION.gem
cd ..

cd hecks-adapters-sql-database
gem push ./hecks-adapters-sql-database-$VERSION.gem

cd ../hecks-adapters-dynamodb
gem push ./hecks-adapters-dynamodb-$VERSION.gem

cd ../hecks-adapters-resource-server
gem push ./hecks-adapters-resource-server-$VERSION.gem

cd ../hecks-domain
gem push ./hecks-domain-$VERSION.gem

cd ../hecks-packager
gem push ./hecks-packager-$VERSION.gem

cd ../hecks-serverless
gem push ./hecks-serverless-$VERSION.gem

cd ../hecks-events
gem push ./hecks-events-$VERSION.gem

cd ../hecks-logger
gem push ./hecks-logger-$VERSION.gem

cd ../hecks-memory-database
gem push ./hecks-memory-database-$VERSION.gem

cd ../hecks-validator
gem push ./hecks-validator-$VERSION.gem

cd ../hecks-domain-builder
gem push ./hecks-domain-builder-$VERSION.gem

cd ../hecks
gem push ./hecks-$VERSION.gem
