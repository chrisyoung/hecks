#!/usr/bin/env bash

cd hecks-application/lib
while read -r version; do VERSION=$version; done < Version
gem push ./hecks-application-$VERSION.gem
cd ..

cd hecks-adapters/hecks-adapters-sql-database
gem push ./hecks-adapters-sql-database-$VERSION.gem

cd ../hecks-adapters-resource-server
gem push  ./hecks-adapters-resource-server-$VERSION.gem

cd ../
gem push  ./hecks-adapters-$VERSION.gem

cd ../hecks-application
gem push ./hecks-application-$VERSION.gem

cd ../hecks-domain
gem push  ./hecks-domain-$VERSION.gem

cd ../hecks
gem push  ./hecks-$VERSION.gem
