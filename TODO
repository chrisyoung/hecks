# Wouldn't it be nice if things worked this way?
# Your Domain is the root hexagon
PizzaHexagon

# Domain modules are equivalent to aggregates
PizzaHexagon::PizzaMaker

# Formatters
PizzaHexagon::PizzaMaker::Formatters::JSON

# Validators
PizzaHexagon::PizzaMaker::Validators::Create
PizzaHexagon::PizzaMaker::Validators::Update
PizzaHexagon::PizzaMaker::Validators::Delete

# Commands
PizzaHexagon::PizzaMaker::Commands::Create
PizzaHexagon::PizzaMaker::Commands::Update
PizzaHexagon::PizzaMaker::Commands::Delete

# Queries
PizzaHexagon::PizzaMaker::Queries::PizzaByID
PizzaHexagon::PizzaMaker::Queries::Pizzas

# Drivers (Equivalent to Hexagonal "left port" or "driver port")
PizzaHexagon::Drivers::WebAPI

# Clients (Equivalent to hexagonal "right port" or "driven port")
PizzaHexagon::Clients::SQL
PizzaHexagon::Clients::CouchBase
